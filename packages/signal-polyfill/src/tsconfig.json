{
  "compilerOptions": {
    "rootDir": "./",
    "pretty": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2022",
    "noEmit": true,
    "lib": ["DOM", "ES2021"],
    "strict": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts"]
}
